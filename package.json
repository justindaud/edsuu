{
    "name": "edsu-house",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "frontend-public",
      "frontend-admin",
      "shared"
    ],
    "scripts": {
      "dev": "concurrently \"npm run dev:backend\" \"wait-on http://localhost:5002 && npm run dev:public\" \"wait-on http://localhost:5002 && npm run dev:admin\"",
      "dev:backend": "cd backend && ts-node src/index.ts -p 5002",
      "dev:public": "cd frontend-public && next dev -p 5000",
      "dev:admin": "cd frontend-admin && next dev -p 5001",
      "build": "concurrently \"npm run build:backend\" \"npm run build:public\" \"npm run build:admin\"",
      "build:backend": "cd backend && tsc",
      "build:public": "cd frontend-public && next build",
      "build:admin": "cd frontend-admin && next build",
      "start": "concurrently \"npm run start:backend\" \"npm run start:public\" \"npm run start:admin\"",
      "start:backend": "cd backend && node dist/index.js -p 5002",
      "start:public": "cd frontend-public && next start -p 5000",
      "start:admin": "cd frontend-admin && next start -p 5001",
      "init-admin": "cd backend && ts-node scripts/init-admin.ts",
      "create-user": "cd backend && ts-node scripts/create-user.ts"
    },
    "dependencies": {
      "@heroicons/react": "^2.1.1",
      "@hookform/resolvers": "^3.3.4",
      "@types/multer": "^1.4.12",
      "@types/nodemailer": "^6.4.17",
      "@types/react-datepicker": "^7.0.0",
      "@types/sharp": "^0.32.0",
      "aws4": "^1.13.2",
      "bcryptjs": "^2.4.3",
      "cloudinary": "^2.0.0",
      "dotenv": "^16.4.1",
      "express": "^5.1.0",
      "jsonwebtoken": "^9.0.2",
      "lucide-react": "^0.488.0",
      "mongoose": "^8.1.1",
      "multer": "^1.4.5-lts.2",
      "next": "14.1.0",
      "next-auth": "^4.24.11",
      "nodemailer": "^6.10.0",
      "react": "^18",
      "react-datepicker": "^8.3.0",
      "react-dom": "^18",
      "react-hook-form": "^7.50.0",
      "react-hot-toast": "^2.5.2",
      "react-icons": "^5.5.0",
      "sharp": "^0.34.1",
      "tailwind-merge": "^3.2.0",
      "zod": "^3.22.4"
    },
    "devDependencies": {
      "@eslint/eslintrc": "^3.3.1",
      "@radix-ui/react-dialog": "1.1.10",
      "@types/bcryptjs": "^2.4.6",
      "@types/cors": "^2.8.17",
      "@types/express": "^5.0.1",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/node": "^20.17.30",
      "@types/react": "18.3.20",
      "@types/react-dom": "18.3.6",
      "autoprefixer": "^10.4.21",
      "concurrently": "^9.1.2",
      "eslint": "^8",
      "eslint-config-next": "14.1.0",
      "postcss": "^8.5.3",
      "tailwindcss": "^3.4.17",
      "ts-node": "^10.9.2",
      "typescript": "^5.8.3",
      "wait-on": "^8.0.3"
    }
  }
  